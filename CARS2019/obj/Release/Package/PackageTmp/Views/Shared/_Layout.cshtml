<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CARS 2019</title>




    @Scripts.Render("~/bundles/jquery")
    @*<link href="~/Content/theme.default.min.css" rel="stylesheet" />*@
    @*<link class="ui-theme" rel="stylesheet" href="~/Content/jquery-ui.min.css" />
        <script src="~/Scripts/tablesorter/jquery-ui.min.js"></script>
        <link href="~/Content/jq.css" rel="stylesheet" />
        <link href="~/Content/prettify.css" rel="stylesheet" />
        <script src="~/Scripts/tablesorter/docs.js"></script>*@

    <!-- Tablesorter: required -->
    @*<link href="~/Content/theme.blue.css" rel="stylesheet" />*@
    <link href="~/Content/theme.ice.css" rel="stylesheet" />
    <link href="~/Content/widget.grouping.css" rel="stylesheet" />

    <script src="~/Scripts/tablesorter/jquery.tablesorter.js"></script>
    <script src="~/Scripts/tablesorter/jquery.tablesorter.widgets.js"></script>
    <script src="~/Scripts/tablesorter/jquery.metadata.js"></script>
    <script src="~/Scripts/tablesorter/widget-storage.js"></script>
    <script src="~/Scripts/tablesorter/widget-filter.js"></script>
    <script src="~/Scripts/tablesorter/parser-input-select.min.js"></script>
    <script src="~/Scripts/tablesorter/parser-date-weekday.min.js"></script>
    <script src="~/Scripts/tablesorter/widget-grouping.min.js"></script>
    <script src="~/Scripts/tablesorter/widget-columns.js"></script>
    <link href="~/Content/jquery.tablesorter.pager.min.css" rel="stylesheet" />
    <script src="~/Scripts/tablesorter/jquery.tablesorter.pager.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("CARS 2019", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                @*Controller is: @ViewContext.Controller.ValueProvider.GetValue("controller").RawValue.ToString()*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(ViewContext.Controller.ValueProvider.GetValue("controller").RawValue.ToString() == "Home" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    <li class="@(HttpContext.Current.Request.QueryString["reworkType"] == "TR" ? "active" : "")">@Html.ActionLink("TS", "Index", "Reports", routeValues: new { reportStatus = 0, reworkType = "TR" }, htmlAttributes: null)</li>
                    <li class="@(HttpContext.Current.Request.QueryString["reworkType"] == "CR" ? "active" : "")">@Html.ActionLink("Customer", "Index", "Reports", routeValues: new { reportStatus = 0, reworkType = "CR" }, htmlAttributes: null)</li>
                    <li class="@(HttpContext.Current.Request.QueryString["reworkType"] == "VR" ? "active" : "")">@Html.ActionLink("Vendor", "Index", "Reports", routeValues: new { reportStatus = 0, reworkType = "VR" }, htmlAttributes: null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer class="hidden-print">
            <p>&copy; @DateTime.Now.Year - Thomson Shore</p>
            <i>Version: @ViewContext.Controller.GetType().Assembly.GetName().Version</i>
        </footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
