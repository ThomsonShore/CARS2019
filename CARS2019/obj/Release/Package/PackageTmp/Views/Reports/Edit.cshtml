}

<h2>Edit</h2>
<hr />

<div class="form-group">
    <dl class="dl-horizontal">
        <dt>Customer Name:</dt>
        <dd id="customerName" name="customerName"></dd>
        <dt>Customer Id:</dt>
        <dd id="cust_ID" name="cust_ID"></dd>
